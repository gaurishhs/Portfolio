---
export interface KV {
    key: string;
    value: string;
    link: string;
}

interface Props {
    items: KV[];
}

const { items } = Astro.props;
---

<ul class="divide-y w-full divide-zinc-200 dark:divide-zinc-700">
    {items.map((item, i) => (
        <li
            class="py-3 w-full justify-between flex gap-2 cursor-pointer"
        >
            <a
                class="flex w-full group justify-between text-sm text-zinc-600 dark:text-zinc-500"
                href={item.link}
            >
                <span class="group-hover:text-zinc-700 mr-2 transition dark:group-hover:text-zinc-400">
                    {item.key}
                </span>
                <p class="group-hover:text-zinc-700 transition dark:group-hover:text-zinc-400">
                    {item.value}
                </p>
            </Link>
        </li>
    ))}
</ul>

